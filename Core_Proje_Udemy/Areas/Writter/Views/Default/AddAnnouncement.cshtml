@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_WritterLayout.cshtml";
}

<h1>Yeni Duyuru Oluşturma Sayfası</h1>
<br />
<form class="form-group" method="post">
    @Html.Label("Duyuru Başlığı")
    @Html.TextBoxFor(x=>x.Title,new{@class = "form-control"})
    <br />
    @Html.Label("Duyuru Kategorisi")
    @Html.TextBoxFor(x=>x.Status,new{@class = "form-control"})
    <br />
    @Html.Label("Duyuru İçeriği")
    @Html.TextAreaFor(x=>x.Content,10,3,new{@class = "form-control"})
    <br />
    <button class="btn btn-dark">Oluştur</button>
</form>

