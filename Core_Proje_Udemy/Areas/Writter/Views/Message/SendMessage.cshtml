@model EntityLayer.Concrete.WritterMessage

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WritterLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Sayfası</h1>
<br />
<form class="form-group" method="post">
    @Html.Label("Alıcı Mail")
    @Html.DropDownListFor(x=>x.Receiver,(List<SelectListItem>)ViewBag.userList,new{@class="form-control"})
    @*@Html.TextBoxFor(x=>x.Receiver,new{@class = "form-control"})*@
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x=>x.Subject,new{@class = "form-control"})
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent,10,3,new{@class = "form-control"})
    <br />
    <button class="btn btn-dark">Gönder</button>
</form>

