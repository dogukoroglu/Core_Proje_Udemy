@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
	<h3 class="mb-0">Hizmetler Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
	<table class="table align-items-center table-flush">
		<thead class="thead-light">
			<tr>
				<th scope="col" class="sort" data-sort="name">#</th>
				<th scope="col" class="sort" data-sort="budget">Başlık</th>
				<th scope="col" class="sort" data-sort="status">Görsel</th>
				<th scope="col">Sil</th>
				<th scope="col" class="sort" data-sort="completion">Düzenle</th>
			</tr>
		</thead>
		<tbody class="list">
			@foreach (var item in Model)
			{
				<tr>
					<th>@item.ServiceID</th>
					<td>@item.Title</td>
					<td>@item.ImageUrl</td>
					<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
					<td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-warning">Güncelle</a></td>
				</tr>
			}
		</tbody>
	</table>
	<br />
	<a href="/Service/AddService/" class="btn btn-dark">Yeni Hizmet Ekle</a>
</div>

