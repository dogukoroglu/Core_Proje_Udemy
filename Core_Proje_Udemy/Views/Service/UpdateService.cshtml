@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Hizmet Düzenleme Sayfası </p>
            <form method="post" class="forms-sample">
                <input type="hidden" asp-for="ServiceID" />
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Görsel</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>

