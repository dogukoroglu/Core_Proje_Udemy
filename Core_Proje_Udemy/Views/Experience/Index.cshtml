@using EntityLayer.Concrete
@model List<Experience>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Şirket Adı</th>
							<th>Tarih-Pozisyon</th>
							<th>Açıklama</th>
							<th>Sil</th>
							<th>Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr style="color:white">
								<td>@item.ExperienceID</td>
								<td>@item.Name</td>
								<td>@item.Date</td>
								<td>@item.Description.Substring(0,25)</td>
								<td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
								<td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-warning">Güncelle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<a href="/Experience/AddExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
			</div>
		</div>
	</div>
</div>

