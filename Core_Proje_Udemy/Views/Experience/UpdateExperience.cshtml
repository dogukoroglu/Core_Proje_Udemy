@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Deneyim Ekleme Sayfası </p>
            <form method="post" class="forms-sample">
                <input type="hidden" asp-for="ExperienceID" />
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>Deneyim İsmi</label>
                    <input type="text" class="form-control" asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" asp-for="Description" rows="6" cols="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>


