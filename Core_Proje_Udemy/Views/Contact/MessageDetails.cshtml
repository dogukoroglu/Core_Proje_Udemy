@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detayları  </p>
            <form method="post" class="forms-sample">
                <input type="hidden" asp-for="MessageID" />
                <div class="form-group">
                    <label>Gönderen</label>
                    <input type="text" style="color:black" class="form-control" asp-for="Name" disabled="disabled">
                </div>
                <div class="form-group">
                    <label>Gönderen Mail</label>
                    <input type="text" style="color:black" class="form-control" asp-for="Mail" disabled="disabled">
                </div>
                <div class="form-group">
                    <label>Gönderildiği Tarih</label>
                    <input type="text" style="color:black" class="form-control" asp-for="Date" disabled="disabled">
                </div>
                <div class="form-group">
                    <label>Mesaj İçeriği</label>
                    <textarea class="form-control" style="color:black" asp-for="Content" rows="6" cols="3" disabled="disabled"></textarea>
                </div>
                @*<button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>*@
            </form>
        </div>
    </div>
</div>

