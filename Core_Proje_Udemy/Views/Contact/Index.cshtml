@using EntityLayer.Concrete
@model List<Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>İletişim Mesaj Listesi</h1>
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Gönderen</th>
							<th>Tarih</th>
							<th>Sil</th>
							<th>Mesajı Gör</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr style="color:white">
								<td>@item.MessageID</td>
								<td>@item.Name</td>
								<td>@item.Date</td>
								<td><a href="/Contact/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></td>
								<td><a href="/Contact/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Gör</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


