@using EntityLayer.Concrete
@model List<WritterMessage>

@{
    ViewData["Title"] = "AdminInbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Yazar - Admin | Gelen Kutusu</h1>
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Gönderen</th>
							<th>Konu</th>
							<th>Tarih</th>
							<th>Sil</th>
							<th>Mesajı Gör</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr style="color:white">
								<td>@item.WritterMessageID</td>
								<td>@item.SenderName</td>
								<td>@item.Subject</td>
								<td>@item.Date</td>
								<td><a href="/AdminMessage/AdminMessageDelete/@item.WritterMessageID" class="btn btn-danger">Sil</a></td>
								<td><a href="/AdminMessage/AdminMessageDetails/@item.WritterMessageID" class="btn btn-warning">Mesajı Gör</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

