@model EntityLayer.Concrete.About

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<form method="post" class="forms-sample">
				<input type="hidden" asp-for="AboutID" />
				<div class="form-group">
					<label>Başlık</label>
					<input type="text" class="form-control" asp-for="Title" />
				</div>
				<div class="form-group">
					<label>Yaş</label>
					<input type="text" class="form-control" asp-for="Age" />
				</div>
				<div class="form-group">
					<label>Mail</label>
					<input type="text" class="form-control" asp-for="Mail" />
				</div>
				<div class="form-group">
					<label>Telefon Numarası</label>
					<input type="text" class="form-control" asp-for="Phone" />
				</div>
				<div class="form-group">
					<label>Adres</label>
					<input type="text" class="form-control" asp-for="Address" />
				</div>
				<div class="form-group">
					<label>Görsel</label>
					<input type="text" class="form-control" asp-for="ImageUrl" />
				</div>
				<div class="form-group">
					<label>Açıklama</label>
					@Html.TextAreaFor(x=>x.Description, 10,3,new {@class = "form-control"})
				</div>
				<button type="submit" class="btn btn-primary mr-2">Güncelle</button>
			</form>
		</div>
	</div>
</div>

