@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Sosyal Medya Güncelle Sayfası </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    <input type="text" class="form-control" asp-for="Url">
                </div>
                <div class="form-group">
                    <label>İkon</label>
                    <input type="text" class="form-control" asp-for="Icon">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>

