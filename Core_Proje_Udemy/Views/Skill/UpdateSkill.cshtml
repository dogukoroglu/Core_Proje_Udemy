@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Düzenleme Sayfası</h3>
    <form method="post" class="form-group">
        <input type="hidden" asp-for="SkillID" />
        <br />
        <label>Yetenek Başlığı</label>
        <input type="text" class="form-control" asp-for="Title" />
        <br />
        <label>Değer</label>
        <input type="text" class="form-control" asp-for="Value" />
        <br />
        <button class="btn btn-dark">Kaydet</button>
    </form>
</div>

