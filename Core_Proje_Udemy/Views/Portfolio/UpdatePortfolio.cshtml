@model EntityLayer.Concrete.Portfolio

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Proje Düzenleme Sayfası</h3>
    <form method="post" class="form-group">
        <input type="hidden" asp-for="PortfolioID" />
        <br />
        <label>Proje Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
        <br />
        <label>Görsel-1</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
        <br />
        <label>Görsel-2</label>
        <input type="text" asp-for="ImageUrl2" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl2"></span>
        <br />
        <label>Proje Linki</label>
        <input type="text" asp-for="ProjectUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ProjectUrl"></span>
        <br />
        <label>Küçük Resim-1</label>
        <input type="text" asp-for="Image1" class="form-control" />
        <span class="text-danger" asp-validation-for="ProjectUrl"></span>
        <br />
        <label>Küçük Resim-2</label>
        <input type="text" asp-for="Image2" class="form-control" />
        <span class="text-danger" asp-validation-for="ProjectUrl"></span>
        <br />
        <label>Küçük Resim-3</label>
        <input type="text" asp-for="Image3" class="form-control" />
        <span class="text-danger" asp-validation-for="ProjectUrl"></span>
        <br />
        <label>Küçük Resim-4</label>
        <input type="text" asp-for="Image4" class="form-control" />
        <span class="text-danger" asp-validation-for="ProjectUrl"></span>
        <br />
        <button class="btn btn-dark">Güncelle</button>
    </form>
</div>

